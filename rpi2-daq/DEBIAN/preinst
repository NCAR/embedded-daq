#!/bin/sh
# preinst script for rpi2-daq
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

if [ "$1" = install -o "$1" = upgrade ]; then
    # dpkg uses hard links to make backups of files before they are overwritten.
    # This doesn't work on the /boot file system which is FAT:
    #   unable to make backup link of `./boot/dt-blob.bin' before installing new version: Operation not permitted
    # So move dt-blob.bin to dt-blob.bin.save in this preinst method.
    dt=/boot/dt-blob.bin
    [ -f $dt ] && mv $dt $dt.save
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
