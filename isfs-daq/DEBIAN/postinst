#!/bin/sh
# postinst script for isfs-daq
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

if [ "$1" = install ]; then
    cf=/etc/default/nidas-daq
    # desired values for DAQ_* in config file
    user=daq
    group=eol
    gid=1342
    if ! [ -f $cf ]; then
        echo "/etc/default/nidas-daq does not exist, is nidas-daq installed?"
        exit 1
    fi
    tmpcf=$(mktemp /tmp/isfs-daq_XXXXXX)
    cp $cf $tmpcf
    trap "{ rm -f $tmpcf; }" EXIT
    . $cf
    update=false
    # check if DAQ_GROUP is $group
    if [ -n "$DAQ_GROUP" -a "$DAQ_GROUP" != $group
        sed -i -r -e "/^DAQ_GROUP=.*/d" $tmpcf
        unset DAQ_GROUP
        update=true
    fi
    if [ -n "$DAQ_GID" -a "$DAQ_GID" != $gid ];
        sed -i -r -e "/^DAQ_GID=.*/d" $tmpcf
        unset DAQ_GID
        update=true
    fi
    if [ -n "$DAQ_USER" -a "$DAQ_USER" != $user ];
        sed -i -r -e "/^DAQ_USER=.*/d" $tmpcf
        unset DAQ_USER
        update=true
    fi
    if [ -n "$DAQ_UID" ];
        sed -i -r -e "/^DAQ_UID=.*/d" $tmpcf
        unset DAQ_UID
        update=true
    fi
    if $update; then
        echo "# values set by isfs-daq package" >> $tmpcf
        [ $DAQ_GROUP ] || echo "DAQ_GROUP=$group" >> $tmpcf
        [ $DAQ_GID ] || echo "DAQ_GROUP=$gid" >> $tmpcf
        [ $DAQ_USER ] || echo "DAQ_USER=$user" >> $tmpcf
        cp $tmpdf $cf
    fi
fi

exit 0
